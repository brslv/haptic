include page-title.pug

mixin product-card-simple({ slug, name, boosts_count, description, user_twitter_screen_name, user_slug, place = null })
  a(href=`/p/${slug}` class="block")
    div(class="relative")
      div(
        class={
          "relative bg-white shadow-sm rounded-md border border-gray-100 hover:shadow-md px-4 py-3 transition": true,
          "border border-gray-100": place === null,
          "border-2 border-yellow-400": place === 0,
          "border-2 border-gray-400": place === 1,
          "border-2 border-yellow-800": place === 2,
        }
      )      
        div(class="flex flex-col h-full")
          div(id="product-heading")
            div(class="flex items-start")
              h1(class="font-medium flex-1 mr-2")= name
              div(class="bg-yellow-300 flex items-center justify-center px-4 py-1 font-medium text-gray-800 rounded-full text-xs uppercase" data-tippy-content=`${boosts_count} ${boosts_count === '1' ? 'person has' : 'people have'} boosted "${name}"`)
                span= boosts_count