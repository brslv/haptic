include page-title.pug

mixin product-card-simple({ slug, logo_url, name, boosts_count, description, user_twitter_screen_name, user_slug, place = null })
  - var firstLetter = name.substring(0, 1).toUpperCase();
  - var descriptionShort = description && description.length > 30 ? description.substring(0, 30) + '...' : description;
  a(href=`/p/${slug}` class="block")
    div(class="relative")
      div(
        class="relative rounded-md hover:ring-2 hover:ring-gray-300 hover:ring-offset-2 transition"
      )
        div(class="border-b border-gray-200 hover:border-transparent px-4 py-3")
          div(class="flex flex-col h-full")
            div(id="product-heading")
              div(class="flex items-start")
                div(class="")
                  if logo_url
                    img(src=(logo_url) class="flex-1 w-10 h-10 rounded-md mr-4 border border-gray-200")
                  else
                    div(class="w-10 h-10 rounded-md mr-4 bg-gray-50 border border-gray-200 flex items-center justify-center")
                      //- +icon("circle", { stroke: "muted", width: 10, height: 10 })
                      p(class="font-bold")= firstLetter

                div(class="flex-1")
                  div(class="flex items-center")
                    p(class="text-sm flex-1 font-medium mr-2 break-all")= name
                    div(class="bg-gray-100 flex items-center justify-center px-4 py-1 font-medium text-gray-800 rounded-full text-xs uppercase" data-tippy-content=`${boosts_count} ${boosts_count === '1' ? 'person has' : 'people have'} boosted "${name}"`)
                      span= boosts_count

                  if description
                    div(class="mt-2")
                      div(class="relative text-xs text-gray-500")
                        p= descriptionShort
