include page-title.pug

mixin product-card-simple({ slug, logo_url, name, boosts_count, description, user_twitter_screen_name, user_slug, place = null })
  - var firstLetter = name.substring(0, 1).toUpperCase();
  a(href=`/p/${slug}` class="block")
    div(class="relative")
      div(
        class={
          "relative bg-white rounded-md border-gray-200 hover:ring-2 hover:ring-gray-300 hover:ring-offset-2 px-4 py-3 transition": true,
          "border border-gray-100": place === null,
          "border-2 border-yellow-400": place === 0,
          "border-2 border-gray-400": place === 1,
          "border-2 border-yellow-800": place === 2,
        }
      )      
        div(class="flex flex-col h-full")
          div(id="product-heading")
            div(class="flex items-center")
              if logo_url
                img(src=(logo_url) class="w-8 h-8 rounded-md mr-4 border border-gray-200")
              else
                div(class="w-8 h-8 rounded-md mr-4 bg-gray-50 border border-gray-200 flex items-center justify-center")
                  //- +icon("circle", { stroke: "muted", width: 10, height: 10 })
                  p(class="font-bold")= firstLetter
              p(class="text-sm flex-1 font-medium flex-1 mr-2 break-all")= name
              div(class="bg-gray-100 flex items-center justify-center px-4 py-1 font-medium text-gray-800 rounded-full text-xs uppercase" data-tippy-content=`${boosts_count} ${boosts_count === '1' ? 'person has' : 'people have'} boosted "${name}"`)
                span= boosts_count
