mixin flash-msg(flash)
  if flash
    if flash.success && flash.success.length
      div(data-flash-msg class="success-container mb-4 border border-green-600")= flash.success[0]
    if flash.error && flash.error.length
      div(data-flash-msg class="error-container mb-4 border border-red-600")= flash.error[0]
