include ./icon.pug

mixin top-bar(activePage)
    div(class="relative w-full bg-white shadow-sm border-b border-gray-100 mb-8")
        div(class="container px-4 mx-auto")
            div(class="flex h-16 items-center justify-between")
                a(href="/")
                    div(class="flex items-center")
                        img(src="/static/images/logo/logo-main.svg" class="h-8 logo-dark")
                        img(src="/static/images/logo/logo-main-light.svg" class="h-8 logo-light")
                nav
                    div(class="h-16 flex md:hidden items-center justify-center")
                      if !user
                        a(
                          href="/browse"
                          class={"h-full flex items-center hover:bg-gray-50 px-4 mr-4": true,
                                "border-b-4 border-yellow-300": activePage === "browse"}
                        )
                          li(class="flex items-center")
                            +icon("grid", { width:20, height: 20 })(class="mr-2")
                            span(class="font-medium") Browse

                      +icon("menu", { width: 20, height: 20 })(data-mobile-nav-open)

                    //- mobile

                    ul(class="hidden md:hidden text-lg absolute top-0 left-0 h-screen w-screen bg-white m-0 p-0 flex flex-col items-center justify-center z-20" data-mobile-nav)
                      +icon("x", { width: 20, height: 20 })(class="absolute top-5 right-4" data-mobile-nav-close)
                      if user
                        li(class="mb-4")
                          a(href="/dashboard" class="flex items-center w-xl bg-gray-100 rounded-full px-4 py-2")
                            +icon("box", { width:20, height: 20 })(class="mr-2")
                            span Dashboard
                        li(class="mb-4")
                          a(href="/browse" class="flex items-center w-xl bg-gray-100 rounded-full px-4 py-2")
                            +icon("grid", { width:20, height: 20 })(class="mr-2")
                            span Browse
                        li(class="mb-4")
                          a(href="/collections" class="flex items-center w-xl bg-gray-100 rounded-full px-4 py-2")
                            +icon("bookmark", { width:20, height: 20 })(class="mr-2")
                            span Collections
                        li(class="mb-4")
                          a(href="/notifications" class="flex items-center w-xl bg-gray-100 rounded-full px-4 py-2")
                            div(class="relative")
                              +icon("mail", { width:20, height: 20 })(class="mr-2")
                              if notifications && notifications.unread && notifications.unread.length > 0
                                span(class="absolute -top-4 -left-4 p-1 bg-yellow-300 rounded-full flex items-center justify-center text-xs" style="min-width: 23px;")= notifications.unread.length
                            span Notifications
                        li(class="mb-4")
                          a(href="/dashboard/profile" class="flex items-center w-xl bg-gray-100 rounded-full px-4 py-2")
                            img(class={"rounded-full w-8 h-8 mr-2": true, "w-9 h-9 border-4 border-double border-yellow-300": user.type === USER_TYPES.CREATOR } src=`${user.twitter_profile_image_url}` alt=`${user.twitter_screen_name} profile image`)
                            span Profile
                        li(class="mb-4")
                          a(href="/logout" class="flex items-center w-xl bg-gray-100 rounded-full px-4 py-2")
                            +icon('log-out', { width:20, height: 20 })(class="mr-2")
                            span Log out
                      else
                        li(class="mb-4")
                          a(href="/#pricing" class="flex items-center w-xl bg-gray-100 rounded-full px-4 py-2")
                            +icon("dollar-sign", { width:20, height: 20 })(class="mr-2")
                            span Pricing
                        li(class="mb-4")
                          a(href="/login" class="flex items-center w-xl bg-gray-100 rounded-full px-4 py-2")
                            +icon('log-in', { width:20, height: 20 })(class="mr-2")
                            span Login

                    //- desktop

                    ul(class="hidden md:flex items-center h-16 relative")
                        if user
                            a(
                              href="/dashboard"
                              class={
                                "h-full flex items-center hover:bg-gray-50 px-4": true,
                                "border-b-4 border-yellow-300": activePage === "dashboard"
                              }
                              data-tippy-content="Dashboard"
                            )
                                li
                                    +icon('box', { width:20, height: 20 })

                            a(
                              href="/browse"
                              class={"h-full flex items-center hover:bg-gray-50 px-4": true,
                                    "border-b-4 border-yellow-300": activePage === "browse"}
                              data-tippy-content="Browse"
                            )
                              li
                                +icon("grid", { width:20, height: 20 })

                            a(
                              href="/collections"
                              class={
                                "h-full flex items-center hover:bg-gray-50 px-4": true,
                                "border-b-4 border-yellow-300": activePage === "collections"
                              }
                              data-tippy-content="Collections"
                            )
                                li
                                    +icon('bookmark', { width:20, height: 20 })

                            a(
                              href="/notifications"
                              class={
                                "h-full flex items-center hover:bg-gray-50 px-4": true,
                                "border-b-4 border-yellow-300": activePage === "notifications"
                              }
                              data-tippy-content=`Notifications (${notifications && notifications.unread && notifications.unread.length || 0})`
                            )
                                li(class="relative")
                                    +icon('mail', { width:20, height: 20 })
                                    if notifications && notifications.unread && notifications.unread.length > 0
                                        span(class="absolute -top-3 -right-3 p-1 bg-yellow-300 rounded-full flex items-center justify-center text-xs" style="min-width: 23px;")= notifications.unread.length

                            a(
                              href="/dashboard/profile"
                              class={
                                "h-full flex items-center hover:bg-gray-50 px-4": true,
                                "border-b-4 border-yellow-300": activePage === "profile"
                              }
                              data-tippy-content="Profile settings"
                            )
                                li(class="relative")
                                  img(class={"rounded-full w-8 h-8": true, "w-9 h-9 border-4 border-double border-yellow-300": user.type === USER_TYPES.CREATOR } src=`${user.twitter_profile_image_url}` alt=`${user.twitter_screen_name} profile image`)

                            a(href="/logout" class="h-full flex items-center hover:bg-gray-50 px-4" data-tippy-content="Log out")
                                li
                                    +icon('log-out', { width:20, height: 20 })
                        else
                          a(
                            href="/browse"
                            class={"h-full flex items-center hover:bg-gray-50 px-4": true,
                                  "border-b-4 border-yellow-300": activePage === "browse"}
                          )
                            li(class="flex items-center")
                              +icon("grid", { width:20, height: 20 })(class="mr-2")
                              span(class="font-medium") Browse
                          a(
                            href="/#pricing"
                            class="h-full flex items-center hover:bg-gray-50 px-4"
                          )
                            li(class="flex items-center")
                              +icon("dollar-sign", { width:20, height: 20 })(class="mr-2")
                              span(class="font-medium") Pricing
                          a(href="/login" class="h-full flex items-center hover:bg-gray-50 px-4")
                              li(class="flex items-center")
                                  +icon('log-in', { width:20, height: 20 })(class="mr-2")
                                  span(class="font-medium") Login
