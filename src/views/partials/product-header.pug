mixin product-header(product, links, activePage)
  div(class="container mx-auto")
    h1(class="bg-white rounded-md border border-gray-200 px-4 py-2 inline-block md:hidden pr-4 text-xl md:text-2xl font-bold mb-4 text-center")= product.name
    div(class="flex items-center bg-white h-14 px-4 rounded-md border border-gray-200 relative")
      h1(class="hidden md:block pr-4 text-2xl font-bold mr-4")= product.name
      div(class="flex items-center h-full")
        a(href=`${links.posts}` class={"h-full flex items-center px-4 hover:bg-gray-50": true, "border-b-4 border-yellow-300 primary-glow": activePage === 'posts'} data-tippy-content="Posts")
          +icon('message-square', { width: 18, height: 18 })
        a(href=`${links.settings}` class={"h-full flex items-center px-4 hover:bg-gray-50": true, "border-b-4 border-yellow-300 primary-glow": activePage === 'settings'} data-tippy-content="Product settings")
          +icon('settings', { width: 18, height: 18 })
        a(href=`${links.url}` class="h-full flex items-center px-4 hover:bg-gray-50" data-tippy-content="View product page")
          +icon('eye', { width: 18, height: 18 })
