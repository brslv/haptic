mixin product-header(product, links, activePage)
  div(class="container mx-auto p-4")
    div(class="flex items-center")
      h1(class="pr-4 text-2xl font-bold mr-4")= product.name
      a(href=`${links.posts}` class={"mr-4": true, "text-yellow-300": activePage === 'posts'})
        ion-icon(name="chatbox-ellipses-outline" class="text-2xl cursor-pointer")
      a(href=`${links.settings}` class={"mr-4": true, "text-yellow-300": activePage === 'settings'})
        ion-icon(name="settings-outline" class="text-2xl cursor-pointer")