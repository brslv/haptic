doctype html
html(lang="en" id="html" class="dark")
  head(id="head")
    meta(charset="utf-8")
    title= meta.title
    meta(name="description" content= meta.description)
    meta(
      name="viewport"
      content="width=device-width, initial-scale=1"
    )

    if meta.og && meta.og.title
      meta(property="og:title" content=`${meta.og.title}`)
    else
      meta(property="og:title" content=`${meta.title}`)

    if meta.og && meta.og.description
      meta(property="og:description" content=`${meta.og.description}`)
    else
      meta(property="og:description" content=`${meta.description}`)

    if meta.og && meta.og.image
      meta(property="og:image" content=`${meta.og.image}`)

    if meta.twitter && meta.twitter.image
      meta(name="twitter:image" content=`${meta.twitter.image}`)

    if meta.twitter && meta.twitter.twitter_card
      meta(name="twitter:card" content=`${meta.twitter.twitter_card}`)
    else
      meta(name="twitter:card" content="summary_large_image")

    if meta.twitter && meta.twitter.image_alt
      meta(name="twitter:image:alt" content=`${meta.twitter.image_alt}`)

    link(rel="preconnect" href="https://fonts.gstatic.com")

    link(href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet")

    link(rel="icon" href="/static/images/icon.ico")

    link(rel="stylesheet" href="/static/css/styles.css")

    script(type='text/javascript' async src="https://www.googletagmanager.com/gtag/js?id=G-DD6BBRSV9W")

    script(type='text/javascript').
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-DD6BBRSV9W');
  body(class="dark:bg-gray-800 bg-white" id="body")
    div(class="text-gray-800 dark:text-gray-200" id="root")
      div(class="z-20 border border-gray-100 hidden fixed bottom-0 right-0 m-8 p-4 rounded-xl bg-white shadow-2xl text-sm" id="cookies-consent")
        p(class="w-60 mb-4").
          We use cookies to provide the best user experience possible. We use them for the proper functioning of the website, for monitoring visitor traffic and marketing purposes. By continuing to browse the site, you agree to our use of cookies.
        
        // You can read more about it <a href="/privacy-policy" class="text-blue-500">here</a>.
        button(class="w-full px-4 py-2 bg-yellow-400 rounded-full" id="cookies-consent-ok-btn").
          OK


      block content

    block scripts
      script(
        src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.21.1/axios.min.js"
        integrity="sha512-bZS47S7sPOxkjU/4Bt0zrhEtWx0y0CRkhEp8IckzK+ltifIIE9EMIMTuT/mEzoIMewUINruDBIR/jJnbguonqQ=="
        crossorigin="anonymous"
      )
      script(src="/static/js/cookies-consent.js")
