extends layouts/base.layout.pug

include partials/top-bar.pug
include partials/icon.pug
include partials/page-title.pug

block content
  +top-bar
  div(class="container mx-auto p-4")
    +page-title Checkout

    div(class="my-4")
      form(action="/create-customer" method="POST" class="bg-white p-4 rounded-xl border border-gray-100 shadow")
        +page-title(class="mb-4") Create customer
        label(class="block mb-4")
          div(class="label pb-1 pl-1") Email
          input(type="email" class="input" name="email" placeholder="Email")
        button(type="submit" class="btn btn-primary") Create customer
