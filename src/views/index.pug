extends layouts/base.layout.pug

include partials/top-bar.pug

block content
  div(class="relative" id="top")
    +top-bar(false)
                
    div(class="z-10 relative p-4 w-full h-full container mx-auto")
      header(class="relative my-20 sm:my-0 sm:h-screen flex items-center")
        img(class="hidden xl:block absolute top-20 right-0" src="/static/images/landing/img-1-mod.svg" alt="Happy customer with baloons - drawing")
        div(class="relative")
          h2(class="text-4xl md:text-6xl font-black max-w-xl mb-8")
            | The 
            span(class="text-yellow-400") #BuildInPublic 
            | toolkit for your next big thing.
          h3(class="sm:text-2xl text-gray-600 max-w-3xl mb-8").
            Tap into the wisdom of the crowd with Haptic. Build, test and learn in public. Get feedback from your audience and grow beyond their expectations.
          div
            form(id="subs-form")
              div(class="flex items-start md:items-center flex-col md:flex-row")
                input(
                  id="email"
                  type="email"
                  name="email"
                  placeholder="Email"
                  class="h-10 sm:h-16 w-full md:w-1/2 px-8 py-4 md:mr-4 mb-4 md:mb-0 rounded-full bg-gray-200"
                )
