mixin use-case(title, icon, shapeSrc)
  div(class="bg-white sm:bg-transparent border border-gray-200 sm:border-none relative p-8 rounded-md bg-clip-padding bg-opacity-70" style="backdrop-filter: blur(20px);")
    img(src=`/static/images/landing/shapes/${shapeSrc}.svg` alt="Shape - blob" class="absolute -top-2 left-4" style="width: 100px; height: 100px;")
    div(class="relative z-10")
      +icon(icon, { width: 32, height: 32 })(class="mb-8")
      h2(class="font-bold text-xl md:text-2xl mb-4")= title
      if block
        p
          block

mixin step(nr, title, imageSrc, mobileImgHeight, blobSrc, imageAttrs, blobWidth)
  div(class="flex relative sm:bg-transparent flex-col-reverse rounded-md sm:flex-row items-start mb-32 sm:mb-20")
    div(class="absolute")&attributes(imageAttrs)
      img(src=`/static/images/landing/shapes/${blobSrc}.svg` alt="Shape - blob" style=`width: ${blobWidth}px;`)
    div(class="relative z-10 border border-gray-200 bg-white transition p-4 md:p-8 text-center sm:text-left rounded-md sm:mr-10 sm:max-w-lg bg-opacity-70 bg-clip-padding" style="backdrop-filter: blur(20px);")
      div(class="relative")
        span(class="block text-xs font-medium text-gray-600 uppercase mb-4 mt-10 sm:mt-0") Step #{nr}
        h4(class="text-xl md:text-2xl font-bold mb-8 bg-yellow-100 p-1 inline-block transform -rotate-1")= title
        if block
          block
    div(class="mx-auto max-w-xl sm:max-w-3xl relative -mb-16 sm:mb-0 z-20")
      img(src=`/static/images/landing/${imageSrc}.svg` alt="Application UI component" class=`block sm:hidden w-full -mt-8 sm:mt-0 h-${mobileImgHeight || 64}` style="min-width: 150px;")
      img(src=`/static/images/landing/${imageSrc}.svg` alt="Application UI component" class="hidden sm:block w-full transition transform hover:scale-105" style="min-width: 300px; max-width: 350px;")

mixin detail(title, isSoon = false)
  li(class={"relative p-4 md:p-8 transition rounded-md": true, "bg-red-50 hover:bg-red-100": isSoon, "bg-yellow-50 hover:bg-yellow-100": !isSoon})
    if isSoon
      span(class="bg-red-200 absolute -top-2 -right-2 uppercase font-medium text-xs px-2 py-1.5 rounded-md") Soon
    h2(class="font-bold text-xl md:text-2xl mb-4")= title
    if block
      block

block content
  div(class="absolute top-0 left-0 w-full h-1/4 gradient-bg")
  div(class="bg-transparent" id="top")
    div(class="mb-8 sm:mb-32")
      +top-bar

      // - hero
      div(class="container p-4 mx-auto mt-32")
        div(class="text-center relative mx-auto")
          h1(class="text-3xl md:text-5xl pb-12 font-black")
            span(class="relative")
              span Humanize 
              img(src="/static/images/landing/underline.svg" alt="Underline" class="absolute top-10 left-2 md:top-14 md:left-6 select-none" style="width: 180px")
            span(class="relative z-10") your product

          h2(class="text-2xl text-gray-600 mx-auto pb-24" style="max-width: 28ch") You have a story. Your product, too. Share it with the world.
  
          div(class="flex items-center justify-center flex-col mb-24")
            div(class="relative")
              img(src="/static/images/landing/arrow.svg" alt="Arrow" class="absolute -top-2 -left-28 select-none")
              a(class="btn btn-primary text-lg md:text-xl px-6 py-4 mb-1 click-scale" href="/login") Start sharing your story
            span(class="text-sm text-gray-600") FREE, no credit cards required!
            +people


      div(class="flex flex-col items-center")
        // img(src="/static/images/landing/smiling-face.svg" class="-mb-6 select-none hidden md:block")
        div(class="hidden md:block relative overflow-hidden bg-gray-50 z-10 -mb-32 lg:-mb-64 shadow-xl rounded-md border border-gray-200 select-none transition transform" style="max-width: 90%")
          div(class="flex items-center bg-gray-100 w-full h-12 px-4 border-b border-gray-200")
            div(class="flex items-center mr-4")
              div(class="w-4 h-4 rounded-full bg-red-500 mr-2")
              div(class="w-4 h-4 rounded-full bg-yellow-400 mr-2")
              div(class="w-4 h-4 rounded-full bg-green-500 mr-2")
            div(class="flex-1 flex items-center px-4 bg-white rounded-md w-32 h-8 border border-gray-200")
