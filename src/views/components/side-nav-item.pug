include ../partials/icon.pug

mixin side-nav-item({ href, icon, button, active = false, counter = null })
  div
    a(
      href=href
      class={
        "inline-block -mx-3 mb-1 px-3 py-2 text-lg font-medium transition rounded-md hover:bg-gray-100": true,
        "bg-yellow-100 hover:bg-yellow-300 border-2 border-yellow-300": button,
        "bg-gray-100": active
      }
    )
      span(class="relative flex items-center")
        if icon
          +icon(icon)(class="mr-2")
          if counter
            div(
              class="px-2.5 py-1.5 absolute -top-3 -left-3 bg-yellow-300 rounded-full text-xs font-medium flex items-center justify-center"
              style="min-width: 20px; min-height: 20px;"
            )= counter
        span
          block