extend layouts/base.layout.pug

mixin product-picker({ product })
  button(class="w-64 m-1 flex items-center p-2 bg-white border border-gray-200 hover:ring-2 hover:ring-gray-300 hover:ring-offset-2 transition rounded-md")
    img(class="w-10 h-10 rounded-md border border-gray-200 mr-2" src=product.logo_url)
    p(class="text-sm font-medium")= product.name

block content
  if myProducts
    div(class="flex flex-wrap -m-1")
      each product in myProducts
        +product-picker({ product })
        +product-picker({ product })
        +product-picker({ product })
        +product-picker({ product })
        +product-picker({ product })
        +product-picker({ product })
        +product-picker({ product })
        +product-picker({ product })
        +product-picker({ product })
        +product-picker({ product })
  div(id="react-editor")